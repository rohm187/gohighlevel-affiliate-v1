generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]

}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Lead {
  id            String   @id @default(cuid())
  email         String   @unique
  firstName     String?
  lastName      String?
  phone         String?
  company       String?
  message       String?
  source        String?  // Which page/form they came from
  interests     String?  // What they're interested in
  status        String   @default("new") // new, contacted, converted, etc.
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("leads")
}

model Newsletter {
  id        String   @id @default(cuid())
  email     String   @unique
  source    String?  // Which page they subscribed from
  createdAt DateTime @default(now())

  @@map("newsletter")
}
